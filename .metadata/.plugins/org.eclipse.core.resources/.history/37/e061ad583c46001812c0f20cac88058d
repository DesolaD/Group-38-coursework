import java.io.*;
import java.util.*;

public class Reader {
	
	public static String readStream(InputStream is) {
		StringBuilder sb = new StringBuilder(512);
	    try {
	        InputStreamReader r = new InputStreamReader(is, "UTF-8");
	        int c = 0;
	        while ((c = r.read()) != -1) {
	            sb.append((char) c);
	        }
	    } catch (IOException e) {
	        throw new RuntimeException(e);
	    }
	    System.out.println(sb);
	    return sb.toString();
	}
}
